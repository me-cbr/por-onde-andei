{
  "expo": {
    "name": "Por Onde Andei",
    "slug": "por-onde-andei",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.seunome.porondepassei",
      "infoPlist": {
        "NSCameraUsageDescription": "O app precisa acessar sua câmera para registrar fotos dos lugares visitados",
        "NSLocationWhenInUseUsageDescription": "O app precisa acessar sua localização para marcar no mapa os lugares que você visitou",
        "NSFaceIDUsageDescription": "O app usa Face ID para autenticação segura"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.seunome.porondepassei",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-image-picker",
      "expo-location",
      "expo-local-authentication",
      "expo-sqlite"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}
